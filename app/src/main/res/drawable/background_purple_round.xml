<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/hard_purple_splash"/>
            <!--apply a border around button-->
            <stroke android:color="@android:color/transparent" android:width="0dp" />
            <!-- make the button corners rounded-->
            <corners android:topLeftRadius="@dimen/dp_4" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topRightRadius="@dimen/dp_4" />
        </shape>
    </item>
</selector>